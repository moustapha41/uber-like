{
  "name": "bikeride-pro-backend",
  "version": "1.0.0",
  "description": "Backend API for BikeRide Pro - MotoTaxi, Livraison & Covoiturage",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_ENV=test jest --testPathPattern=tests",
    "test:watch": "NODE_ENV=test jest --watch --testPathPattern=tests",
    "test:coverage": "NODE_ENV=test jest --coverage --testPathPattern=tests",
    "migrate": "node src/config/migrate.js",
    "seed:admin": "node scripts/seed-admin.js"
  },
  "keywords": [
    "mototaxi",
    "delivery",
    "carpool",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "opossum": "^6.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.6.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.6.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
